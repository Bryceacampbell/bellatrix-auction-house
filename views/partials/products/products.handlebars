<div class="itemCard">
    <div class="itemContent">
        <h1 class="title">{{name}}</h1>
        <h4 class="category">{{category}}</h4>
        <div class="userId">Posted by {{userId}}</div>
        <div class="description">{{description}}</div>
</div>

    <img src="{{imageUrl}}" class="smallImage" alt="IMAGE NOT FOUND">

</div>

<div class="itemButtons">   
    <div class="currentBid">Highest Bid: ${{currentBid}}</div>
    <div class="auctionEnd">Auction ends: {{auctionEnd}}</div>
    <button class="btn-danger bid-btn" data-category="{{id}}" data-toggle="modal" data-target="#modal{{id}}">Bid Now!</button>
</div>
<!-- Modal -->
<div class="modal fade" id="modal{{id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Bid now!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

      <div class="row">
        <div class="col-sm-1 col-md-1 col-lg-1"></div>
        <img alt="Product Image Preview" class="col-sm-10 col-md-10 col-lg-10" src="{{imageUrl}}" />
        <div class="col-sm-1 col-md-1 col-lg-1"></div>
      </div>

      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 modalName">{{name}}</div>
      </div>

      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 modalCategory">Category: {{category}}</div>
      </div>

      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 userId">Posted by: {{userId}}</div>
      </div>

        <div class="row">
          <div class="col-sm-12 col-md-12 col-lg-12 description">{{description}}</div>
        </div>

        <div class="row">
          <div class="col-sm-12 col-md-12 col-lg-12 enterTitle">Enter your bid:</div>
        </div>
        
        <div class="row">
          <div class="col-sm-6 col-md-6 col-lg-6 currentBid">Current Price: {{currentBid}}</div>
          <div class="col-sm-1 col-md-1 col-lg-1 usdIcon"><i class="fa fa-usd"></i></div>
          <input class="col-sm-5 col-md-5 col-lg-5" type="number" min="0.01" step="0.01" max="2500" class="row" type="text">
        </div>
        

      </div>
    

    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
      <button type="button" class="btn btn-primary">Submit Offer</button>
    </div>
    </div>
  </div>
</div>

